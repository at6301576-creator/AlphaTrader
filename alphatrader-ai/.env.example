# Database
# For local development (SQLite):
DATABASE_URL="file:./prisma/dev.db"

# For production (PostgreSQL - recommended for Vercel):
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE_NAME"

# Authentication (REQUIRED)
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-change-this-to-random-string"

# For local development:
NEXTAUTH_URL="http://localhost:3000"

# For production (set this in Vercel dashboard):
# NEXTAUTH_URL="https://your-app.vercel.app"

# API Keys (Get free API keys from these services)

# Alpha Vantage (Stock data)
# Get your key: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY="your-alpha-vantage-key"

# Finnhub (Stock data)
# Get your key: https://finnhub.io/dashboard
FINNHUB_API_KEY="your-finnhub-key"

# AI Services (Optional but recommended for AI features)

# OpenAI (AI insights and chat)
# Get your key: https://platform.openai.com/api-keys
OPENAI_API_KEY="your-openai-key"

# Ollama (Local LLM - optional, for local AI)
# Install Ollama: https://ollama.ai
OLLAMA_BASE_URL="http://localhost:11434"

# Stripe (Optional - for subscription payments)
# Get keys: https://dashboard.stripe.com/apikeys
# STRIPE_PUBLIC_KEY="pk_test_..."
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."

# Cache Configuration (Optional - defaults provided)
# Stock data cache TTL in milliseconds (default: 300000 = 5 minutes)
STOCK_CACHE_TTL_MS=300000

# Quote cache TTL in milliseconds (default: 300000 = 5 minutes)
QUOTE_CACHE_TTL_MS=300000

# API response cache TTL in milliseconds (default: 60000 = 1 minute)
API_CACHE_TTL_MS=60000

# Portfolio cache TTL in seconds (default: 60)
PORTFOLIO_CACHE_TTL_SEC=60

# Portfolio stale-while-revalidate in seconds (default: 120)
PORTFOLIO_SWR_SEC=120

# Default cache TTL in milliseconds (default: 300000 = 5 minutes)
DEFAULT_CACHE_TTL_MS=300000

# Enable/disable caching globally (default: true)
CACHE_ENABLED=true

# Rate Limiting Configuration (Optional - defaults provided)
# Portfolio mutations per minute (default: 20)
RATE_LIMIT_PORTFOLIO_MUTATIONS=20

# Portfolio mutations window in seconds (default: 60)
RATE_LIMIT_PORTFOLIO_WINDOW_SEC=60

# API requests per minute (default: 100)
RATE_LIMIT_API_REQUESTS=100

# API requests window in seconds (default: 60)
RATE_LIMIT_API_WINDOW_SEC=60

# Enable/disable rate limiting (default: true in production, false in development)
RATE_LIMIT_ENABLED=true

# Performance Configuration (Optional - defaults provided)
# Enable source maps in production (default: false)
PRODUCTION_SOURCE_MAPS=false

# Enable React strict mode (default: true)
REACT_STRICT_MODE=true

# Enable SWC minification (default: true)
SWC_MINIFY=true

# Enable compression (default: true)
COMPRESS=true

# Database query logging (default: true in development, false in production)
DATABASE_LOG_QUERIES=false

# Application Configuration
# Enable debug logging (default: true in development, false in production)
DEBUG=false

# Cron Jobs (Required for scheduled tasks)
# Generate a secret: openssl rand -base64 32
CRON_SECRET="your-cron-secret-here"

# Email Configuration (Optional - for notifications)
# Resend API key: https://resend.com/api-keys
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@yourdomain.com"

# Push Notifications (Optional)
# VAPID keys for web push notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
