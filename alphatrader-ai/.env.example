# ============= DATABASE =============
DATABASE_URL="postgresql://user:password@host:5432/dbname"
POSTGRES_PRISMA_URL="postgresql://user:password@host:5432/dbname?pgbouncer=true"
POSTGRES_URL_NON_POOLING="postgresql://user:password@host:5432/dbname"

# ============= AUTHENTICATION =============
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# ============= API KEYS =============
# Finnhub Stock Data API (https://finnhub.io)
# Free tier: 60 calls/min
# Starter ($59.99/mo): 300 calls/min - 5x faster scanning!
# Growth ($149.99/mo): 600 calls/min - 10x faster scanning!
NEXT_PUBLIC_FINNHUB_API_KEY="your-finnhub-api-key"
FINNHUB_API_KEY="your-finnhub-api-key"

# Yahoo Finance (optional, enabled by default)
YAHOO_FINANCE_ENABLED="true"

# ============= REDIS CACHE (CRITICAL FOR PERFORMANCE) =============
# Upstash Redis for persistent caching (https://upstash.com)
# FREE tier available! Dramatically improves scanner performance
# First scan: 2 min | Second scan with cache: 5-10 seconds!
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# ============= CRON JOBS =============
# Secret for securing cron endpoints
# Generate with: openssl rand -base64 32
CRON_SECRET="your-cron-secret-here"

# ============= PERFORMANCE TUNING =============
# Cache TTL (Time To Live) in milliseconds
STOCK_CACHE_TTL_MS="300000"  # 5 minutes
QUOTE_CACHE_TTL_MS="60000"   # 1 minute
NEWS_CACHE_TTL_MS="1800000"  # 30 minutes

# Rate Limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_WINDOW_MS="60000"      # 1 minute
RATE_LIMIT_MAX_REQUESTS="60"

# Database Connection Pool
DATABASE_POOL_SIZE="20"
DATABASE_POOL_TIMEOUT="5000"

# ============= FEATURE FLAGS =============
ENABLE_AI_FEATURES="true"
ENABLE_TECHNICAL_ALERTS="true"
ENABLE_PORTFOLIO_ANALYTICS="true"
ENABLE_REQUEST_DEDUPLICATION="true"
ENABLE_RESPONSE_COMPRESSION="true"

# ============= LOGGING =============
LOG_LEVEL="info"  # debug | info | warn | error
LOG_PRISMA_QUERIES="false"

# ============= DEPLOYMENT =============
NODE_ENV="production"  # development | production | test
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"
